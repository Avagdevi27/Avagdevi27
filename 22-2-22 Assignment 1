n=int(input('enter number:'))
for i in range(0,n):
    for k in range(0,n-i-1):
        print(" ",end=" ")
        for j in range(0,i+1):
            print("*",end=" ")
            print("\n")
            n=5
            for i in range(n-1,0,-1):
                for k in range(n,i,-1):
                    print(" ",end=" ")
                    for j in range(0,i):
                        print("*",end=" ")
                        print("\n")
